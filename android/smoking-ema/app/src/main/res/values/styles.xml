<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomSeekBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:thumbOffset">0dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

</resources>
